<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_map_jarak"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Jarak : 0 km"
        android:padding="8dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#2f3363"
        android:background="@drawable/background_btn" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".MapsActivity" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_map_panggil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_btn_menu"
        android:gravity="center"
        android:text="Panggil"
        android:textColor="#2f3363"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_map_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/orange_btn_background"
        android:gravity="center"
        android:text="Beranda"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp" />
</LinearLayout>